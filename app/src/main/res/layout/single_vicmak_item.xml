<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:background="#E0F0F3"
            android:id="@+id/item_name"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/item_name"
            android:id="@+id/item_image"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1300/="
            android:layout_below="@id/item_image"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_border"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:id="@+id/price"
            android:paddingLeft="20dp"
            android:backgroundTint="#00cc44"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item is out of stock"
            android:visibility="gone"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:id="@+id/availability"
            android:background="#f2e6cb"
            android:layout_below="@id/price"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add to Cart"
            android:backgroundTint="#00A2FF"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:id="@+id/button_add_to_cart"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/availability"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>